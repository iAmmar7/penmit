{
  "name": "penmit",
  "version": "1.2.0",
  "description": "AI-powered git commit message generator using Ollama - local or cloud",
  "type": "module",
  "bin": {
    "aicommit": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --check src",
    "format:fix": "prettier --write src"
  },
  "keywords": [
    "git",
    "ai",
    "commit",
    "ollama",
    "cli"
  ],
  "author": "Ammar Ansari <iammaransari@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iAmmar7/aicommit.git"
  },
  "homepage": "https://github.com/iAmmar7/aicommit#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  }
}